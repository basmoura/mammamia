<h1>Pizzarias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Data de Criação</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.founded_at.strftime("%d/%m/%Y") %></td>
    <td><%= restaurant.email %></td>
    <td><%= link_to 'Ver', restaurant %></td>
    <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Remover', restaurant, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @restaurantes %>
</div>
<br>

<%= link_to 'Nova Pizzaria', new_restaurant_path, class: "btn btn-success" %>
