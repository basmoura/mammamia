<h1>Ingredientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td>
      <%= link_to 'Ver', ingredient, class: "btn btn-success btn-xs" %>
      <%= link_to 'Editar', edit_ingredient_path(ingredient), class: "btn btn-default btn-xs" %>
      <%= link_to 'Remover', ingredient, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-xs" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @ingredients %>
</div>
<br>

<%= link_to 'Novo Ingrediente', new_ingredient_path, class: "btn btn-success" %>



