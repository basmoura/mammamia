<div class="row">
  <div class="col-lg-12">
    <%= form_tag @pizza, method: 'get' do %>
    <div class="col-lg-6 col-lg-offset-2">
      <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Informe o sabor da pizza" %>
    </div>
    <div class="col-lg-4">
      <%= submit_tag "Buscar", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>

<h1>Pizzas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Valor Calórico</th>
      <th>Pizzaria</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @pizzas.each do |pizza| %>
  <tr>
    <td><%= pizza.name %></td>
    <td><%= pizza.description %></td>
    <td><%= pizza.price %></td>
    <td><%= pizza.kcal %></td>
    <td><%= pizza.restaurant.name %></td>
    <td><%= link_to 'Ver', restaurant_pizza_path(restaurant_id: pizza.restaurant.id, id: pizza.id), class: "btn btn-success btn-xs" %>
      <%= link_to 'Editar', edit_restaurant_pizza_path(restaurant_id: pizza.restaurant.id, id: pizza.id), class: "btn btn-default btn-xs" %>
      <%= link_to 'Remover', restaurant_pizza_path(restaurant_id: pizza.restaurant.id, id: pizza.id), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-xs" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @pizzas %>
</div>
