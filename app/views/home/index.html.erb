<h1>Pizzarias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Data de Criação</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @restaurants.limit(5).each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.founded_at.strftime("%d/%m/%Y") %></td>
    <td><%= restaurant.email %></td>
    <td><%= link_to 'Ver', restaurant %></td>
    <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Remover', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<br>
<h1>Pizzas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Valor Calórico</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @pizzas.limit(5).each do |pizza| %>
  <tr>
    <td><%= pizza.name %></td>
    <td><%= pizza.description %></td>
    <td><%= "R$ " + pizza.price.to_s %></td>
    <td><%= pizza.kcal.to_s + " kcal" %></td>
    <td><%= link_to 'Ver', pizza %></td>
    <td><%= link_to 'Editar', edit_pizza_path(pizza) %></td>
    <td><%= link_to 'Remover', pizza, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
  </tbody>
</table>



